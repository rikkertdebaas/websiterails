<% @title="Home" %>
<div class="row">
  <div class="inhoudbox" id="inhoudbox">
    <div class="col-lg-12"  id="inhoud" style="top: -16px; center">

      <%= image_tag("voorpagina.png", :alt => "Running", :size => "100%", id: 'voorpagina')  %>

    </div>
